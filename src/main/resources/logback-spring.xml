<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <!-- 定义日志格式和路径变量 -->
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n" />
    <property name="LOG_FILE_PATH" value="${logging.path:-./logs}/spring_boot_log" />
    <!-- 1. 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 2. 滚动文件输出（合并时间+大小策略，解决弃用警告） -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}/app.log</file>

        <!-- 关键修改：使用 SizeAndTimeBasedRollingPolicy 替代旧策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- 归档文件命名格式 -->
            <fileNamePattern>${LOG_FILE_PATH}/app-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory> <!-- 保留30天 -->
            <totalSizeCap>10GB</totalSizeCap> <!-- 总大小限制 -->
            <maxFileSize>10MB</maxFileSize> <!-- 单个文件大小限制 -->
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 3. 错误日志单独输出 -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_FILE_PATH}/error.log</file>
        <!-- 只记录 ERROR 级别 -->
        <filter class="ch.qos.logback.classic.filter.LevelFilter">
            <level>ERROR</level>
            <onMatch>ACCEPT</onMatch>
            <onMismatch>DENY</onMismatch>
        </filter>

        <!-- 同样使用新的滚动策略 -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_FILE_PATH}/error-%d{yyyy-MM-dd}.%i.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- 4. 多环境配置（确保引用 ERROR_FILE） -->
    <springProfile name="default">
        <!-- 默认环境：可沿用开发环境的配置，或单独定义 -->
        <root level="INFO"> <!-- 默认级别设为 INFO 更通用 -->
            <appender-ref ref="CONSOLE" /> <!-- 输出到控制台 -->
            <appender-ref ref="FILE" /> <!-- 输出到文件 -->
            <appender-ref ref="ERROR_FILE" /> <!-- 错误日志单独输出 -->
        </root>
    </springProfile>

    <springProfile name="dev">
        <root level="DEBUG">
            <appender-ref ref="CONSOLE" />
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" />
        </root>
    </springProfile>

    <springProfile name="prod">
        <root level="INFO">
            <!--appender-ref ref="CONSOLE" /-->
            <appender-ref ref="FILE" />
            <appender-ref ref="ERROR_FILE" /> <!-- 关键：引用 ERROR_FILE -->
        </root>
    </springProfile>

    <!-- 自定义包日志级别 -->
    <!-- logger 配置 > root 配置 -->
    <springProfile name="default">
    <logger name="com.simple" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="com.alibaba" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>

    <logger name="com.alibaba.cloud" level="DEBUG" additivity="false">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </logger>
    </springProfile>
</configuration>